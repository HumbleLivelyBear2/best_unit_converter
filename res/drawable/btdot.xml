<?xml version="1.0" encoding="utf-8"?>
 <selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    
    <item  android:state_pressed="true">
          <shape android:shape="rectangle">
                <gradient
        			android:startColor="#7AA300"
        			android:centerColor="#7AA300"
        			android:endColor="#7AA300"
        			android:centerX="50"
        			android:angle="270"/>
    			<padding android:left="5dp"
       				android:top="5dp"
        			android:right="5dp"
        			android:bottom="5dp" />
    			<corners android:radius="8dp"/>
    
			</shape>
     </item>
    <item  android:state_focused="true">
          <shape android:shape="rectangle">
                <gradient
        			android:startColor="#7AA300"
        			android:centerColor="#7AA300"
        			android:endColor="#7AA300"
        			android:centerX="50"
        			android:angle="270"/>
    			<padding android:left="5dp"
       				android:top="5dp"
        			android:right="5dp"
        			android:bottom="5dp" />
    			<corners android:radius="8dp"/>
    
			</shape>
     </item>
    <item android:drawable="@layout/title_bar_shape_bottom" />

 </selector>