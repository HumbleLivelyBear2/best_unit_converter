<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ads="http://schemas.android.com/apk/res/simple.a"
              android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/background" >
 
 
          
   
    <RelativeLayout android:id="@+id/top"  	android:layout_width="fill_parent" 	android:layout_height="80dip"  android:gravity="center_horizontal" >
    
     
    
    <TextView  android:id="@+id/app_name"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="28dip"  android:text="Converter"        android:textStyle="bold" android:textColor="@drawable/black" android:layout_marginTop="10dip" />   
    <TextView  android:id="@+id/corp_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="16dip"  android:text="S&amp;J Studio"  android:textStyle="bold" android:textColor="#7BA428"      android:gravity="center_horizontal"    android:layout_below="@id/app_name" android:layout_marginLeft="27dip"/>
    <simple.a.FontFitText_Button    
        android:id="@+id/show_popup_button" 
        android:layout_width="140dip" 
        android:layout_height="60dip" 
        android:text="@string/weight"  
        android:textColor="#E0E0E0" 
        android:textSize="25dip"   
        android:layout_marginLeft="145dip" 
        android:layout_alignLeft="@id/app_name" 
        android:layout_marginTop="12dip" 
        android:background="@drawable/btdot" 
        
        /> 
    
    
    </RelativeLayout>
 
 
			
 	<LinearLayout android:id="@+id/popup_window" android:layout_width="fill_parent" android:layout_height="fill_parent" >
		
	<ListView android:id="@+id/myList" android:layout_width="fill_parent" android:layout_height="fill_parent"  />	    
        
	</LinearLayout>

       
  
    
    <LinearLayout 
    android:layout_width="fill_parent" 
    android:layout_height="95dip" 
    android:orientation="horizontal"  
    android:gravity="center_horizontal|center_vertical" 
    
    android:layout_marginLeft="10dip" 
    android:layout_marginRight="10dip"
    android:background="@layout/title_bar_shape"> 
    
    
    <simple.a.FontFitTextView 
    android:id="@+id/Screen1" 
    android:layout_width="135dip" 
    android:layout_height="80dip" 
    android:text="0" 
    android:textSize="35dip"   
   
    android:textColor="#FFFFE5"  
    android:gravity="center"
    android:singleLine="true" 
    android:background="@layout/text_shape"
    
    />
     
   
   <TextView  android:layout_width="wrap_content" 
   android:layout_height="wrap_content" 
   android:textSize="25dip"  
   android:text="="
   android:textStyle="bold"   
   android:textColor="#FFFFCC"  
   
   /> 
  
   
    <simple.a.FontFitTextView 
    android:id="@+id/Screen2"
    android:layout_width="135dip" 
    android:text="0" 
    android:textSize="35dip"  
    android:layout_height="80dip" 
    android:textColor="#FFFFE5" 
    android:singleLine="true" 
    android:gravity="center"
    />
      
    </LinearLayout>
    
    
  
    
    <LinearLayout 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal" 
	    android:gravity="center_horizontal" 
	    android:layout_marginTop="5dip" 
	    android:layout_marginLeft="10dip" 
        android:layout_marginRight="10dip">
    <LinearLayout 
     android:layout_width="fill_parent" 
	 android:layout_height="wrap_content" 
     android:gravity="left">
    <Spinner android:layout_height="wrap_content" android:layout_width="150dip" android:id="@+id/spinner_1"></Spinner>
    
    <LinearLayout 
     android:layout_width="fill_parent" 
	 android:layout_height="wrap_content" 
     android:gravity="right">
    
    <Spinner android:layout_height="wrap_content" android:layout_width="150dip" android:id="@+id/spinner_2"></Spinner>
    </LinearLayout>
    
    
    </LinearLayout>
    
    </LinearLayout>
    
   

    <simple.a.TransparentPanel
		android:id="@+id/buttonPanel"
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:orientation="vertical"
		android:gravity="center_horizontal"
		android:layout_marginLeft="10dip" 
        android:layout_marginRight="10dip">
		
		
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_horizontal" android:layout_marginTop="5dip">
            <Button android:layout_height="46dip" android:layout_width="92dip" android:id="@+id/keypad_1"  android:text="1" android:textSize="25dip" android:background="@drawable/buttonstyle" android:layout_margin="1dip" android:textColor="@drawable/lightwhite"/>
            <Button android:layout_height="46dip" android:layout_width="92dip" android:id="@+id/keypad_2"  android:text="2" android:textSize="25dip" android:background="@drawable/buttonstyle" android:layout_margin="1dip" android:textColor="@drawable/lightwhite"/>
            <Button android:layout_height="46dip" android:layout_width="92dip" android:id="@+id/keypad_3"  android:text="3" android:textSize="25dip" android:background="@drawable/buttonstyle" android:layout_margin="1dip" android:textColor="@drawable/lightwhite"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_horizontal" >
            <Button android:layout_height="46dip" android:layout_width="92dip" android:id="@+id/keypad_4"  android:text="4" android:textSize="25dip" android:background="@drawable/buttonstyle" android:layout_margin="1dip" android:textColor="@drawable/lightwhite"/>
            <Button android:layout_height="46dip" android:layout_width="92dip" android:id="@+id/keypad_5"  android:text="5" android:textSize="25dip" android:background="@drawable/buttonstyle" android:layout_margin="1dip" android:textColor="@drawable/lightwhite"/>
            <Button android:layout_height="46dip" android:layout_width="92dip" android:id="@+id/keypad_6"  android:text="6" android:textSize="25dip" android:background="@drawable/buttonstyle" android:layout_margin="1dip" android:textColor="@drawable/lightwhite"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_horizontal" >
            <Button android:layout_height="46dip" android:layout_width="92dip" android:id="@+id/keypad_7"  android:text="7" android:textSize="25dip" android:background="@drawable/buttonstyle" android:layout_margin="1dip" android:textColor="@drawable/lightwhite"/>
            <Button android:layout_height="46dip" android:layout_width="92dip" android:id="@+id/keypad_8"  android:text="8" android:textSize="25dip" android:background="@drawable/buttonstyle" android:layout_margin="1dip" android:textColor="@drawable/lightwhite"/>
            <Button android:layout_height="46dip" android:layout_width="92dip" android:id="@+id/keypad_9"  android:text="9" android:textSize="25dip" android:background="@drawable/buttonstyle" android:layout_margin="1dip" android:textColor="@drawable/lightwhite"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_horizontal" >
            <Button android:layout_height="46dip" android:layout_width="92dip" android:id="@+id/keypad_dot" android:text="." android:textSize="25dip" android:background="@drawable/buttonstyle" android:layout_margin="1dip" android:textColor="@drawable/lightwhite"/>
            <Button android:layout_height="46dip" android:layout_width="92dip" android:id="@+id/keypad_0"   android:text="0" android:textSize="25dip" android:background="@drawable/buttonstyle" android:layout_margin="1dip" android:textColor="@drawable/lightwhite"/>
            <Button android:layout_height="46dip" android:layout_width="92dip" android:id="@+id/keypad_del" android:text="DEL" android:textSize="25dip" android:background="@drawable/buttonstyle" android:layout_margin="1dip" android:textColor="@drawable/lightwhite"/>
    </LinearLayout>
    
    </simple.a.TransparentPanel>
   
